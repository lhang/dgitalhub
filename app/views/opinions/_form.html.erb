<%= form_for @opinion, :html => { :class => "form-horizontal opinion" } do |f| %>

  <% if @opinion.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@opinion.errors.count, "error") %> prohibited this opinion from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @opinion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_area :content, :class => 'form-control', :rows => "6",
          :placeholder => "留下你想说的吧"%>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :name, :class => 'form-control', :placeholder => "我该怎么称呼你？" %>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :contact, :class => 'form-control', :placeholder => "留下一个联系方式吧(邮箱)" %>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.submit "发送", :class => 'btn btn-primary pull-right' %>
    </div>
  </div>

<% end %>
